@{
    Layout = "_Layout";
}
<h2>Data Mahasiswa</h2>

<div class="form-group">
    <a href="/Home/Create" class="btn btn-primary">Tambah</a>
</div>

<div class="row">
@if(ViewData["pesan"] != null){
    @Html.Raw(ViewData["pesan"])
}
</div>

<div class="row">
<form action="/Home/Search" class="form-inline" method="post">
    <div class="form-group">
        <label for="keyword" class="label-control">Masukkan Keyword&nbsp;</label>
        <input type="text" name="keyword" class="form-control" placeholder="Pencarian NIM .... " aria-label="Search" aria-describedby="basic-addon2">
        <input type="submit" class="btn btn-primary" value="Search"/>
    </div>
</form>
</div></br>
<div class="row">
<table class="table table-striped">
    <tr>
        <th>NIM</th>
        <th>Nama</th>
        <th>Alamat</th>
        <th>Email</th>
        <th>Telpon</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nim</td>
            <td>@item.Nama</td>
            <td>@item.Telpon</td>
            <td>@item.Email</td>
            <td>@item.Telpon</td>
            <td><a href="/Home/Details/@item.Nim" class="btn btn-primary">Update</a>|
            <a href="/Home/Delete/@item.Nim" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>

