@model BelajarASPCore.Models.Mahasiswa

@{
    Layout = "_Layout";
}
<h2>Form Tambah Mahasiswa</h2>
<div class="row">
@if(ViewData["pesan"] != null){
    @Html.Raw(ViewData["pesan"])
}
</div>
<div class="col-md-6">
    <form action="/Home/CreatePost/" method="post">

        <div class="form-group">
            <label>Nama</label>
            <input type="text" class="form-control" name="Nim"/>
        </div>

        <div class="form-group">
            <label>Nama</label>
            <input type="text" class="form-control" name="Nama"/>
        </div>

        <div class="form-group">
            <label>Alamat</label>
            <input type="text" class="form-control" name="Alamat"/>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="Email"/>
        </div>

        <div class="form-group">
            <label>Telpon</label>
            <input type="text" class="form-control" name="Telpon"/>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Simpan"/>
            <a href="/Home/Index" class="btn btn-primary">Batal</a>
        </div>

    </form>
</div>